---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AllPost from "../components/post/AllPost.astro";
---

<Layout title="SourceOnFire" description="Software And Gamedev Page">
    <div class="flex flex-col gap-10">
        <SectionContainer id="home" title="Posts Recientes">
            <section>
                <AllPost limit={4} postType="post"/>
            </section>
        </SectionContainer>
        <SectionContainer id="apps" title="Aplicaciones Recientes">
            <section>
                <AllPost limit={4} postType="app"/>
            </section>
        </SectionContainer>
        <SectionContainer id="addons" title="Plugins Recientes">
            <section>
                <AllPost limit={4} postType="addon"/>
            </section>
        </SectionContainer>
    </div>
</Layout>
