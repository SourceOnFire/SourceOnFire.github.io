---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../../components/SectionContainer.astro";
import PostGrid from "../../components/post/PostGrid.astro";


export const getStaticPaths = (async ({ paginate }) => {
    const pages = await getCollection("posts");
    return paginate(pages.filter(x => x.data.tags?.includes("proyecto")), { pageSize: 10 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Layout title="Proyectos" description="proyectos">
    <SectionContainer id="proyectos" title="Proyectos">
        <PostGrid posts={page.data} />
    </SectionContainer>
</Layout>